	body{
		background: #f2f2f2;
	}
	.listeArticle{
		width: 70%;
		margin: auto;
		max-width: 700px;
	}
	.article{
		background: white;
		border:1px solid gray;
	}
	.avatar{
		float: left;
	}
	.avatar img{
		width: 100%;
		max-width: 50px;
		border-radius: 50%;
		margin: 15px;
	}
	.info-article{
		float: right;
		width: calc(100% - 110px);
		margin: 15px;
	}
	.titre{
		clear: both;
	}
