<body>
	<h1>Fil d'actualit√©s</h1>
	<div class="listeArticle">
		{% for article in articles %}
		<div class="article">
			<div class="avatar"><img src="{{asset('upload/images/default.jpg')}}"></div>
			<div class="info-article">
				<div class="auteur">{{article.author.username}}</div>
				<div class="dateArticle">01-01-2018 21:53:00</div>
			</div>
			<div class="titre">
				<h1>{{article.titre}}</h1>

			</div>
			<div class="post">{{article.content}}</div>
			{% if app.user == article.author %}
			<div class="link"><a href="{{ path('new.view', { 'id' : article.id})}}">En savoir plus</a></div>
			<div class="link"><a href="{{ path('new.delete', { 'id' : article.id})}}">supprimer</a></div>
			<div class="link"><a href="{{ path('new.edit', { 'id' : article.id})}}">modifier</a></div>
			{% endif %}
		</div>
		{% endfor %}
	</div>
	{% endblock %}